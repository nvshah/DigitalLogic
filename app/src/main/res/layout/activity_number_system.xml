<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.nipun.myapp1.MainActivity">

    <TextView
        android:id="@+id/num"
        style="@style/CategoryStyle"
        android:background="@color/category_numbers"
        android:text="Number System" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginTop="34dp"
        android:textSize="17sp"
        android:text="Enter Type of Number you want to input:" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginTop="34dp"
            android:textSize="17sp"
            android:text=" Number: " />
    <EditText
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="2dp"
        android:ems="8"
        android:inputType="number"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="6dp"
        android:onClick="calculateNS"/>
    </LinearLayout>

    <TextView
        android:id="@+id/display1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="13dp"
        android:textSize="17sp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/display2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="13dp"
        android:textSize="17sp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/display3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="13dp"
        android:textSize="17sp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/display4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="13dp"
        android:textSize="17sp"
        android:visibility="gone"/>


</LinearLayout>
